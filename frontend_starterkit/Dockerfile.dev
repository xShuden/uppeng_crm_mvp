# Development Dockerfile for React Frontend Starter Kit
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json yarn.lock ./

# Install dependencies (remove problematic package first)
RUN sed -i '/"redux-typescript"/d' package.json && \
    npm install --legacy-peer-deps

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "start"]